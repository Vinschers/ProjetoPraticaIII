<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SavesActivity">

    <LinearLayout
        android:id="@+id/llCarregando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            app:srcCompat="@drawable/logo_schmoice" />

        <ProgressBar
            android:id="@+id/pbCarregando"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Quase lá... Sem pressa!"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/llPrincipal">

        <Button
            android:id="@+id/btnJogo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Save 1"
            android:textSize="45dp" />

        <Button
            android:id="@+id/btnJogo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Save 2"
            android:textSize="45dp" />

        <Button
            android:id="@+id/btnJogo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="Save 3"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aperte o botão de cancel para remover save"
            android:textAlignment="center"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>